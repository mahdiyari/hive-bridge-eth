{
  "name": "hive-bridge-eth",
  "version": "1.0.0",
  "description": "A production-ready bridge contract for wrapping HIVE tokens on Ethereum",
  "type": "module",
  "scripts": {
    "build": "hardhat build",
    "build:production": "hardhat build --build-profile production",
    "test": "hardhat test nodejs",
    "test:solidity": "hardhat test solidity",
    "test:all": "npm run test && npm run test:solidity",
    "test:comprehensive": "hardhat test nodejs --grep Comprehensive",
    "deploy:local": "hardhat ignition deploy ignition/modules/WrappedHive.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/WrappedHive.ts --network sepolia",
    "deploy:mainnet": "hardhat ignition deploy ignition/modules/WrappedHive.ts --network mainnet",
    "node": "hardhat node",
    "console:local": "hardhat console --network localhost",
    "console:sepolia": "hardhat console --network sepolia",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hive",
    "bridge",
    "ethereum",
    "erc20",
    "blockchain",
    "wrapped-token"
  ],
  "author": "mahdiyari",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahdiyari/hive-bridge-eth.git"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^22.18.11",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.7",
    "typescript": "~5.8.0",
    "viem": "^2.38.3"
  }
}
